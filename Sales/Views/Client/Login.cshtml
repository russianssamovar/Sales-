
@model Sales.ViewModels.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/site.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<div class="form-login">
    <form method="post" asp-action="Login" asp-controller="Client">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div class="form-group">
            <div>
                <label asp-for="Code">Введите Промокод</label>
                <input id="Code" asp-for="Code" class="form-control" />
                <span asp-validation-for="Code"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-primary mt-4">Войти</button>
            </div>

        </div>
    </form>
    <div class="form-group">
        <button onclick="GenPromoCode()" class="btn btn-block btn-secondary">Получить промокод</button>
    </div>

</div>
<script src="/js/site.js"></script>